/* pages/detail/detail.wxss */
page{
  background: #f5f5f5;
}
.detail-container{
  margin-bottom: 100rpx;
}
.detail-item {
  padding: 30rpx;
  margin-bottom: 20rpx;
  background: #fff;
}
.detail-content {
  padding-top:20rpx;
  color: #666;
  text-indent: 28px;
}
.footer {
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 97%;
  z-index: 100;
  background: #fff;
  padding-left: 3%;
  border-top: 1rpx solid #e5e5e5;
}
.btn,.btn::after{
  padding:0;
  border: none;
  background: none;
  border-radius: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 12px;
}
.btn::after{
  content:none;
}
.btn .text{
  line-height: 20px;
}
.btn image {
  width: 18px;
  height: 18px;
}
.animation-modal{
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 999;
  background: #fff;
  padding: 10px;
  box-sizing: border-box;
}
.header-title {
  display: flex;
  justify-content: space-between;
}
.lesson-list{
  padding-top: 10px;
}
.lesson-item{
  display: flex;
  justify-content: space-between;
  border:1px solid red;
  border-radius: 5px;
  padding: 10px;
}