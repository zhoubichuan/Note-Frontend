/* pages/search/search.wxss */
page{
  background: #f5f5f5;
}
.header{
  display: flex;
  width:100%;
  height: 50px;
  padding: 0 20rpx;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  box-sizing: border-box;
}
.search-input{
  width: 80%;
  height: 30px;
  display: flex;
  padding: 0 20rpx;
  align-items: center;
  justify-content: space-between;
  border: 1px solid #ddd;
  background: #f5f5f5;
  border-radius: 30px;
  font-size: 14px;
}
.search-input input{
  width: 80%;
}
.search-box {
  width: 100%;
  padding: 30rpx 20rpx;
  background: #fff;
  margin-bottom: 40rpx;
}
.search-title {
  line-height: 16px;
  border-left: 6px solid #e94840;
  padding-left: 20rpx;
  font-size: 16px;
}
.search-content{
  padding: 10rpx;
}
.search-content text {
  display: inline-block;
  margin: 10rpx;
  padding: 10rpx;
  background: #f5f5f5;
  border-radius: 5px;
}
.clear-storage {
  text-align: center;
  padding-top: 30rpx;
  border-top: 1px solid #f5f5f5;
}
.none{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.no-data{
  margin-top: 300rpx;
  width: 200rpx;
}
.none-tips{
  margin-top: 30rpx;
  font-size: 32rpx;
  color: #c7c7c7;
}